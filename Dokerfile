# Use official PHP 8.2 image with Apache
FROM php:8.2-apache

# Set working directory
WORKDIR /var/www/html

# Copy all project files to container
COPY . /var/www/html/

# Enable Apache mod_rewrite (if needed for pretty URLs)
RUN a2enmod rewrite

# Set proper permissions for files that need to be writable
# e.g., unlock_tracker.json will be written by PHP
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html \
    && touch /var/www/html/unlock_tracker.json \
    && chown www-data:www-data /var/www/html/unlock_tracker.json \
    && chmod 666 /var/www/html/unlock_tracker.json

# Install cURL extension (needed for Paystack API)
RUN docker-php-ext-install curl

# Expose port 80
EXPOSE 80

# Start Apache in foreground
CMD ["apache2-foreground"]
